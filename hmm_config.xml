<?xml version="1.0"?>
<simulation model="HMM">
  <domains>
    <domain id="fluid" environment="fluid">
      <param id="bb" unit="cm">
        <d>1.0</d>
        <d>1.0</d>
      </param>
      <param id="step" unit="mm">
        <d>0.1</d>
        <d>0.1</d>
      </param>
      <param id="init_viscosity">0.012</param>
      <param id="flow">0.001</param>

			<!-- id is implied? -->
      <domain id="microfluid" environment="microfluid">
        <param id="bb" unit="&#xB5;m">
          <d>1.0</d>
          <d>1.0</d>
        </param>
        <param id="step" unit="&#xB5;m">
          <d>0.01</d>
          <d>0.01</d>
        </param>
        <param id="num_elem">300</param>
      </domain>
    </domain>
  </domains>
  <!-- Implied!
	<connections>
		<connection coupling="macro2micro" from="fluid" to="microfluid"/>
		<connection coupling="micro2macro" from="microfluid" to="fluid"/>
	</connections>
	-->
</simulation>
